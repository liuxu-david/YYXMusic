/* components/ranking-area-item/index.wxss */
.ranking-item{
  display: flex;
  width: 100%;
  justify-content: space-around;
  background-color: #ebebeb;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
}
.left{
  display: flex;
  flex-direction:column;
  flex:1;
  justify-content: space-around;
  padding-left: 20rpx;
}
.left .title{
  font-weight: 700;
  font-size: 38rpx;
}
.left .author{
  color: #999;
  font-size: 24rpx;
  text-shadow: 0 0 1rpx black;
}
