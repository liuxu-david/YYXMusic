.right{
  position: relative;
}
.right .image{
  width: 240rpx;
  height: 240rpx;
  border-radius:0 16rpx 16rpx 0 ;
}
.right .counter{
  position: absolute;
  right: 2rpx;
  bottom: 8rpx;
  color: #e2eefa;
  width: 105rpx;
  height: 50rpx;
  background-color: #6a6a68;
  text-align: center;
  line-height: 50rpx;
  z-index: 9;
  border-radius: 16rpx;
  opacity: .9;
}